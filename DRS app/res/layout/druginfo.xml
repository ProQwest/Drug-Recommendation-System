<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@id/mainlayo" android:background="#fdffdf">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="45dp" android:background="@drawable/customactionback">
        <SearchView android:layout_width="320dp" android:layout_height="fill_parent"
                    android:id="@+id/search" android:imeOptions="actionDone" android:queryHint="Drug Name"
                    android:textAlignment="textStart" android:showDividers="end"
                    android:layout_marginLeft="0dp"/>
        <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:id="@+id/textView" android:background="#000000"/>
        <ImageButton style="@style/ActionBarItem" xmlns:android="http://schemas.android.com/apk/res/android"
                     android:id="@+id/back1" android:background="@drawable/actionbar_btn"
                     android:layout_centerVertical="true" android:singleLine="true" android:visibility="visible"
                     android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:layout_gravity="center"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView android:layout_width="fill_parent" android:layout_height="1dp" android:id="@+id/textView1"
                      android:background="#2d1744"/>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="fill_parent" android:id="@+id/Description">
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="45dp" android:background="#881010">
                    <TextView android:layout_width="320dp" android:layout_height="fill_parent" android:text="Description"
                              android:id="@+id/textView2" android:textColor="#f0f0f0" android:layout_marginLeft="5dp"
                              android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:textSize="20dp"/>
                    <Button android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/showdesplus"
                            android:layout_gravity="center" android:background="@drawable/plus_sign"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:layout_width="fill_parent" android:layout_height="1dp" android:id="@+id/textView3"
                      android:background="#2d1744"/>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="fill_parent" android:id="@+id/FoodInt">
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="45dp" android:background="#881010">
                    <TextView android:layout_width="320dp" android:layout_height="fill_parent"
                              android:text="Food Interaction" android:id="@+id/textView4" android:textColor="#f0f0f0"
                              android:layout_marginLeft="5dp" android:layout_marginTop="5dp"
                              android:layout_marginBottom="5dp" android:textSize="20dp"/>
                    <Button android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/showfoodplus"
                            android:layout_gravity="center" android:background="@drawable/plus_sign"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:layout_width="fill_parent" android:layout_height="1dp" android:id="@+id/textView5"
                      android:background="#2d1744"/>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="fill_parent" android:id="@+id/Toxicity">
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="45dp" android:background="#881010">
                    <TextView android:layout_width="320dp" android:layout_height="fill_parent"
                              android:text="Toxicity" android:id="@+id/textView6" android:textColor="#f0f0f0"
                              android:layout_marginLeft="5dp" android:layout_marginTop="5dp"
                              android:layout_marginBottom="5dp" android:textSize="20dp"/>
                    <Button android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/showtoxiplus"
                            android:layout_gravity="center" android:background="@drawable/plus_sign"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:layout_width="fill_parent" android:layout_height="1dp" android:id="@+id/textView7"
                      android:background="#2d1744"/>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="fill_parent" android:id="@+id/Indication">
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="45dp" android:background="#881010">
                    <TextView android:layout_width="320dp" android:layout_height="fill_parent"
                              android:text="Indication" android:id="@+id/textView8" android:textColor="#f0f0f0"
                              android:layout_marginLeft="5dp" android:layout_marginTop="5dp"
                              android:layout_marginBottom="5dp" android:textSize="20dp"/>
                    <Button android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/showindiplus"
                            android:layout_gravity="center" android:background="@drawable/plus_sign"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:layout_width="fill_parent" android:layout_height="1dp" android:id="@+id/textView9"
                      android:background="#2d1744"/>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="fill_parent" android:id="@+id/SideEffect">
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="45dp" android:background="#881010">
                    <TextView android:layout_width="320dp" android:layout_height="fill_parent"
                              android:text="Side Effects" android:id="@+id/textView10" android:textColor="#f0f0f0"
                              android:layout_marginLeft="5dp" android:layout_marginTop="5dp"
                              android:layout_marginBottom="5dp" android:textSize="20dp"/>
                    <Button android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/showsideplus"
                            android:layout_gravity="center" android:background="@drawable/plus_sign"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:layout_width="fill_parent" android:layout_height="1dp" android:id="@+id/textView11"
                      android:background="#2d1744"/>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="fill_parent" android:id="@+id/DrugInt">
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="45dp" android:background="#881010">
                    <TextView android:layout_width="320dp" android:layout_height="fill_parent"
                              android:text="Drug Interaction" android:id="@+id/textView12" android:textColor="#f0f0f0"
                              android:layout_marginLeft="5dp" android:layout_marginTop="5dp"
                              android:layout_marginBottom="5dp" android:textSize="20dp"/>
                    <Button android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/showdrugintplus"
                            android:layout_gravity="center" android:background="@drawable/plus_sign"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:layout_width="fill_parent" android:layout_height="1dp" android:id="@+id/textView13"
                      android:background="#2d1744"/>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="fill_parent" android:id="@+id/Pharmacology">
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="45dp" android:background="#881010" android:id="@+id/linearLayout2">
                    <TextView android:layout_width="320dp" android:layout_height="fill_parent"
                              android:text="Pharmacology" android:id="@+id/textView14" android:textColor="#f0f0f0"
                              android:layout_marginLeft="5dp" android:layout_marginTop="5dp"
                              android:layout_marginBottom="5dp" android:textSize="20dp"/>
                    <Button android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/showdiscurplus"
                            android:layout_gravity="center" android:background="@drawable/plus_sign"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:layout_width="fill_parent" android:layout_height="1dp" android:id="@+id/textView15"
                      android:background="#2d1744"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

